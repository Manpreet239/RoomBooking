@page
@model RoomBooking.Pages.Client.IndexModel

@{
    ViewData["Title"] = "Index";
}



<section class="main">
    <div class="head-text">
        <h2>Register New Customer</h2>
        <img src="https://www.vendhq.com/blog/wp-content/uploads/2018/03/iStock-1251261427-644x429.jpg" class="img-fluid" alt="Responsive image">
    </div>

</section>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer[0].RoomBooking)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Customer) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomBooking)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
