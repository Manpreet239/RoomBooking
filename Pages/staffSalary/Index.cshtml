@page
@model RoomBooking.Pages.staffSalary.IndexModel

@{
    ViewData["Title"] = "Index";
}

<section class="main">
    <div class="head-text">
        <h2>Staff Salary Record</h2>
        <img src="https://www.axisrooms.com/wp-content/uploads/2018/05/Final-montage-.gif" class="img-fluid" alt="Responsive image">
    </div>

</section>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Salary[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary[0].Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary[0].Payment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary[0].PaymentDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Salary) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Payment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
